interface=%(interface)s
driver=nl80211
ssid=%(ssid)s
channel=1
logger_stdout_level=1

macaddr_acl=1 # deny unless in accept list
accept_mac_file=%(accept_mac_file)s

auth_algs=1
ignore_broadcast_ssid=0
wpa=1
wpa_passphrase=%(wpa_passphrase)s
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
